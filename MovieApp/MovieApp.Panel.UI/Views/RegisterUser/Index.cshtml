<body>
    <div class="entryContainer">
        <div class="register-form">
            <div class="logoSmall">
                <a href="/Main/Index">
                    <img class="logoSmall" src="~/main/assets/img/sinesozluk.logo.png" alt="" />
                </a>
            </div>
            <form method="post" asp-action="Index">
                <div class="part">
                    <h4>Ad Soyad</h4>
                    <input id="firstName" type="text" asp-for="@Model.NameSurname" placeholder="" />
                    <span asp-validation-for="@Model.NameSurname" style="font-family:Arial;color:red;"></span>
                </div>
                <div class="part">
                    <h4>Kullanıcı Adı</h4>
                    <input id="firstName" type="text" asp-for="@Model.UserName" placeholder="" />
                    <span asp-validation-for="@Model.UserName" style="font-family:Arial;color:red;"></span>
                </div>
                <div class="part">
                    <h4>Mail Adresi</h4>
                    <input id="firstName" type="email" asp-for="@Model.Mail" placeholder="" />
                    <span asp-validation-for="@Model.Mail" style="font-family:Arial;color:red;"></span>
                </div>

                <div class="part">
                    <h4 for="password">Şifre</h4>
                    <input type="password" asp-for="@Model.Password" placeholder="******************" required="" />
                    <span asp-validation-for="@Model.Password" style="font-family:Arial;color:red;"></span>
                </div>
                <div class="part">
                    <h4 for="password">Şifrenizi Doğrulayın</h4>
                    <input type="password" asp-for="@Model.ConfirmPassword" placeholder="******************" required="" />
                    <span asp-validation-for="@Model.ConfirmPassword" style="font-family:Arial;color:red;"></span>
                </div>

                <div class="part">
                    <h4>Kullanım Koşulları</h4>
                    <input type="checkbox" asp-for="@Model.TermsOfUse" />
                    <a class="btn1">Kullanım koşullarını okudum kabul ediyorum.</a>

                </div>

                @*                @if (!string.IsNullOrEmpty(ViewData.ModelState["signupError"]?.Errors[0]?.ErrorMessage))
                {
                <span class="error" style="color:red;font-family:Arial;">@Html.Raw(ViewData.ModelState["signupError"].Errors[0].ErrorMessage)</span>
                }*@

                @if (!string.IsNullOrEmpty(ViewData.ModelState["signupError"]?.Errors?.FirstOrDefault()?.ErrorMessage))
                {
                    <span class="error" style="color:red;font-family:Arial;">@Html.Raw(ViewData.ModelState["signupError"].Errors.FirstOrDefault().ErrorMessage)</span>
                }


                @if (!string.IsNullOrEmpty(ViewData.ModelState["TermsOfUse"]?.Errors?.FirstOrDefault()?.ErrorMessage))
                {
                    <span class="error" style="color:red;font-family:Arial;">@Html.Raw(ViewData.ModelState["TermsOfUse"].Errors.FirstOrDefault().ErrorMessage)</span>
                }

                @if (!string.IsNullOrEmpty(ViewData.ModelState["recaptcha"]?.Errors?.FirstOrDefault()?.ErrorMessage))
                {
                    <span class="error" style="color:red;font-family:Arial;">@Html.Raw(ViewData.ModelState["recaptcha"].Errors.FirstOrDefault().ErrorMessage)</span>
                }

                <div class="g-recaptcha" data-sitekey="6LesIDonAAAAAPuiNDteWSZ-BDSxn1vxKy5PmhzA"></div>

                <div class="part">
                    Bir hesabınız var mı? <a href="/Account/Login/">Giriş Yap</a>
                </div>
                <div>
                    <button type="submit" id="submit" class="submit-btn" href="">Üyelik Oluştur</button>
                </div>
            </form>
        </div>
    </div>



