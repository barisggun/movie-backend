@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-center p-5">
                            <div class="brand-logo">
                                <img src="~/admin/assets/images/filmatlasi.png">
                            </div>
                            <h4>Kayıt Ekranı</h4>
                            <h6>Yeni bir hesap oluşturun!</h6>
                            <form class="pt-3" role="form" asp-action="Index">
                                <div class="form-group">
                                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.NameSurname" placeholder="Name Surname">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.UserName" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                                    <input type="email" class="form-control form-control-lg" asp-for="@Model.Mail" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="@Model.Password" placeholder="Password" required="">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
                                </div>
                                <div class="form-group mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">Kullanım şartlarını okudum, kabul ediyorum.
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                   Bir hesabınız var mı?<a href="/RegisterUser/Login/" class="text-primary">Giriş Yap</a>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/admin/assets/js/off-canvas.js"></script>
    <script src="~/admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/admin/assets/js/misc.js"></script>
</body>
</html>