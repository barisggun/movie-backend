@model IEnumerable<MovieApp.EntityLayer.Entities.Director>

@{
    ViewData["Title"] = "Oyuncu Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yönetmen Listesi</h1>

<p>
    <a asp-action="Create">Yeni Yönetmen Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@

                    @using (Html.BeginForm("Delete", "Director", new { directorId = item.ID }, FormMethod.Post))
                    {
                        <input type="submit" value="Sil" class="btn btn-danger" onclick="return confirm('@item.DirectorName isimli yönetmeni silmek istediğinize emin misiniz?');" />
                    }
               
            </td>
        </tr>
}
    </tbody>
</table>
