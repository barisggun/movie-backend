@model IEnumerable<MovieApp.EntityLayer.Entities.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Film Listesi</h1>

<p>
    <a asp-action="Create">Yeni Film Oluştur</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.CategoryId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.CategoryId)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>


                <td>
                    <a href="/Movie/Edit/@item.ID" class="btn btn-primary">Düzenle</a>
                    <a href="/Movie/DetailMovie/@item.ID" class="btn btn-warning">Detay</a>
                    <a href="/Movie/Delete/@item.ID" class="btn btn-danger" onclick="return confirm('@item.MovieTitle isimli filmi silmek istediğinize emin misiniz?');">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>
