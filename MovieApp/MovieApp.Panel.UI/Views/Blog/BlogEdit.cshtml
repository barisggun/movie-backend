@using MovieApp.EntityLayer;
@model MovieApp.EntityLayer.Entities.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Blog Düzenleme Ekranı</h1>
<br />
@using(Html.BeginForm("BlogEdit","Blog", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x=>x.ID, new{@class = "form-control"})
    <br/>
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle, new{@class = "form-control"})
    <br />
    @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage, new{@class = "form-control"})
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.BlogImage, new{@class = "form-control"})
    <br />
    @Html.Label("Filmler")
    @Html.DropDownListFor(x=>x.MovieId, (List<SelectListItem>)ViewBag.cv, new {@class = "form-control"})
    <br />
    @Html.Label("Blog içeriği")
    @Html.TextAreaFor(x=>x.BlogContent,15,3, new{@class = "form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>
}

