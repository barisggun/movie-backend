@using MovieApp.EntityLayer.Entities
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-boardered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/AdminRole/AssignRole/@item.Id" class="btn btn-outline-twitter">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/AdminRole/Index" class="btn btn-primary">Rol Listesine Dön</a>

