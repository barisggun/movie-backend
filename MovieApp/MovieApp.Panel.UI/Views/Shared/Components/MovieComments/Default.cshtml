@model List<Comment>

<div class="popularReviews">
    <div class="title">
        <h4>Yorumlar</h4>
    </div>
    <div class="reviews" id="commentContainer">
        @foreach (var item in Model)
        {
            <div class="review">
                <div class="image2">
                    <img src="~/images/profile/@item.ProfilePictureUrl" alt="" />
                </div>
                <div class="write">
                    <a href="/User/Detail/@item.CommentUserNameId"><h2>@item.CommentUserName</h2></a>
                    <br />
                    <small>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</small>
                    <p>@item.CommentContent</p>

                    @if (User.Identity.Name == item.CommentUserName)
                    {
                        <form method="post" asp-action="Delete" asp-controller="Comment" class="deleteCommentForm">
                            <input type="hidden" name="commentId" value="@item.ID" />
                            <input type="hidden" name="movieId" value="@item.MovieId" />
                            <button class="deleteComment" type="submit">Yorumu Sil</button>
                        </form>
                    }
                </div>
            </div>
        }

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Yorum silme formunu gönder
        $(".deleteCommentForm").submit(function (event) {
            event.preventDefault(); // Sayfa yenilenmesini engelle

            var form = $(this);

            // AJAX isteği gönder
            $.ajax({
                url: form.attr("action"),
                type: form.attr("method"),
                data: form.serialize(),
                success: function () {
                    // Yorum başarıyla silindiğinde yapılacak işlemler
                    // Yorumun bulunduğu HTML parçasını kaldır
                    form.closest(".review").remove();
                },
                error: function (xhr, status, error) {
                    // Hata durumunda yapılacak işlemler
                    console.error(error);
                }
            });
        });
    });
</script>

