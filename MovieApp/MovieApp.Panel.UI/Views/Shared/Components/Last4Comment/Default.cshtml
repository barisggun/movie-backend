@model List<Comment>
@{
    Layout = null;
}


<div class="popularReviews">
    <div class="title">
        <h4>Son Yorumlar</h4>
    </div>
    <div class="reviews">
        @foreach (var item in Model)
        {
            <div class="review">
                <div class="image">
                    <a href="/Movie/Detail/@item.MovieId">
                        <img src="~/images/movie/@item.Movie.Poster" alt="" />
                    </a>
                   
                </div>
                <div class="write">
                    <a href="/User/Detail/@item.CommentUserName"><p>@item.CommentUserName</p></a>
                    
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
       
    </div>


