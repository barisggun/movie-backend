@using MovieApp.EntityLayer.Entities
@model List<Blog>

<div class="movieNews">
    <div class="col-1">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i % 3 == 0)
            {
                <div class="new">
                    <div class="newPhoto">
                        <img src="assets/img/png/new.jpg" alt="" />
                    </div>
                    <div class="newContent">
                        <h2>@Model[i].BlogTitle</h2>
                        <p>
                            @Model[i].BlogContent.Substring(0,100)...
                        </p>
                        <a href="#">Devamını Oku</a>
                    </div>
                </div>

            }
            
        }
    </div>
    <div class="col-2">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i%3 == 1)
            {
                <div class="new">
                    <div class="newPhoto">
                        <img src="assets/img/png/new.jpg" alt="" />
                    </div>
                    <div class="newContent">
                        <h2>@Model[i].BlogTitle</h2>
                        <p>
                            @Model[i].BlogContent.Substring(0,20)...

                        </p>
                        <a href="#">Devamını Oku</a>
                    </div>
                </div>

            }
        }
    </div>
    <div class="col-3">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i%3 == 2)
            {
                <div class="new">
                    <div class="newPhoto">
                        <img src="assets/img/png/new.jpg" alt="" />
                    </div>
                    <div class="newContent">
                        <h2>@Model[i].BlogTitle</h2>
                        <p>
                            @Model[i].BlogContent.Substring(0,50)...
                        </p>
                        <a href="#">Devamını Oku</a>
                    </div>
                </div>

            }
        }
    </div>
</div>
